<main class="container">
  <h3><strong>Password Edit Page</strong></h3>
  <form id="changePassword" method="POST" action="/users/<%= user.id%>/update">
    <input type="hidden" name="_method" value="PUT">
    <div class="profileFont profilePage">
      <div class="row">
        <div class="col-3">
          <label>Username</label>
        </div>
        <div class="col-9">
          <input type="text" name="username" value="<%= user.username %>" disabled>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <label>Email</label>
        </div>
        <div class="col-9">
          <input type="text" name="email" value="<%= user.email %>" disabled>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <label>New Password</label>
        </div>
        <div class="col-9">
          <input type="password" name="password" placeholder="Please enter your new password here" autofocus>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <label class="label">Confirm New Password</label>
        </div>
        <div class="col-9">
          <input class="input" name="passwordConfirmation" type="password" placeholder="Confirm it here">
        </div>
      </div>
      <button>Update Password</button>
    </div>
  </form>
</main>
