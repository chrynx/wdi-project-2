<main class="container">
<form method="POST" action="/login">
  <div class="row">
  <div class="col-3">
    <label class="label">Email</label>
  </div>
    <div class="control col-9">
      <input class="input" name="email" type="text" placeholder="Please enter your email here">
    </div>
</div>
<div class="row">
  <div class="col-3">
    <label class="label">Password</label>
  </div>
    <div class="control col-9">
      <input class="input" name="password" type="password" placeholder="Please enter your password here">
    </div>
</div>
  <div class="control">
    <button class="button is-primary">Login</button>
  </div>
</form>
</main>
