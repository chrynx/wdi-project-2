<main class="container">
  <h3><strong>New Message</strong></h3>
  <form id="newMessageForm" method="POST" action="/messages/inbox">
    <div class="row">
      <div class="col-3">
        <label class="labels">Subject</label>
      </div>
      <div class="control col-9">
        <input type="text" name="subject" placeholder="please enter the subject here..." required>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <label class="labels">Text</label>
      </div>
      <div class="control col-9">
        <input type="text" name="text" placeholder="please enter the message here..." required>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <label class="labels">Image</label>
      </div>
      <div class="control col-9">
        <input type="text" name="image" placeholder="please enter an image URL (if desired) here...">
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <label class="labels">To</label>
      </div>
      <div class="control col-9">
        <select name="receiver">
          <% users.forEach((user) => { %>
            <option value="<%= user.id %>"><%= user.username%></option>
        <%  }) %>
        </select>
    </div>
    <div class="row">
      <button>Create</button>
    </div>
  </form>
</main>
