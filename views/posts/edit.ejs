<main class="container">
<h3><strong>Post Edit Page</strong></h3>
<form method="POST" action="/posts/<%= post.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div clas="row">
    <div class="col-3">
    <label>Title</label>
  </div>
  <div class="col-9">
    <input type="text" name="title" value="<%= post.title %>">
  </div>
</div>
  <div clas="row">
    <div class="col-3">
    <label>Subtitle</label>
  </div>
  <div class="col-9">
    <input type="text" name="subtitle" value="<%= post.subtitle %>">
  </div>
</div>
    <div clas="row">
    <div class="col-3">
    <label>Text</label>
  </div>
  <div class="col-9">
    <input type="text" name="text" value="<%= post.text %>">
  </div>
</div>
  <div clas="row">
  <div class="col-3">
    <label>Image</label>
  </div>
  <div class="col-9">
    <input type="text" name="image" value="<%= post.image %>">
  </div>
</div>
  <button>Update</button>
</form>
</main>
